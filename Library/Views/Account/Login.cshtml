@model Library.ViewModels.LoginViewModel



<body class="text-center">
    <div class="container h-100">
        <div class="row ">
            <div class="col-4"></div>
            <div class="col-4">
                <form class="form-signin" method="post" asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl">
                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div>
                        <label class="sr-only" asp-for="Email"></label><br />
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="sr-only"></label><br />
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="custom-checkbox mb-3 ">
                        <label asp-for="RememberMe"></label><br />
                        <input asp-for="RememberMe" type="checkbox" />
                    </div>
                    <div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</body>