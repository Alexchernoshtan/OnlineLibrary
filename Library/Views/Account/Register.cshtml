@model Library.ViewModels.RegisterViewModel
<div class="container h-100">
    <div class="row ">
        <div class="col-4"></div>
        <div class="col-4">
            <form class="form-signin" method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
                <div>
                    <label  asp-for="Email"></label><br />
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <label  asp-for="Year"></label><br />
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year"></span>
                </div>
                <div>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="PasswordConfirm"></label><br />
                    <input asp-for="PasswordConfirm" class="form-control"/>
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
    </div>
