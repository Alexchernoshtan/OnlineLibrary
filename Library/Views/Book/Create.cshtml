@model Library.ViewModels.CreateBookViewModel

@{
    ViewBag.Title = "Add book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add new book</h2>
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger">
        </span>
    </div>
    <div class="form-group">
        <label asp-for="Desc" class="control-label"></label>
        <input asp-for="Desc" />
        <span asp-validation-for="Desc" class="text-danger">
        </span>
    </div>
    <div class="form-control">
        <label asp-for="Img" class="control-label"></label>
        <input asp-for="Img" />
        <span asp-validation-for="Img" class="text-danger">
        </span>
    </div>
    <div class="form-control">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" />
        <span asp-validation-for="File" class="text-danger">
        </span>
    </div>

    <p>
        Category <br />
        @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList)
    </p>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
